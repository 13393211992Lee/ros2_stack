<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find chapt9_urdf_description)/urdf/fishbot/common_inertial.xacro"/>

  <xacro:macro name="wheel_xacro" params="wheel_name xyz radius length">
    <link name="${wheel_name}_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/> 
        <geometry>
          <cylinder radius="${radius}" length="${length}"/>
        </geometry>
        <material name = "yellow">
            <color rgba="1.0 1.0 0.0 0.9"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/> 
        <geometry>
          <cylinder radius="${radius}" length="${length}"/>
        </geometry>
        <material name = "yellow">
            <color rgba="1.0 1.0 0.0 0.9"/>
        </material>
      </collision>
      <xacro:cylinder_inertia m="0.5" h="${length}" r="${radius}"/>
    </link>

    <joint name="${wheel_name}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${wheel_name}_link"/>
      <origin xyz="${xyz}" rpy="0 0 0"/>
      <limit effort="100" velocity="100"/>
       <joint_properties damping="0.5" friction="0.5"/>  <!--区间：0.1-1.0 -->
      <axis xyz="0 1 0"/>
    </joint>

    <gazebo reference="${wheel_name}_link">
      <mu1 value="20.0" />
      <mu2 value="20.0" />
      <kp value="100000000.0" />
      <kd value="1.0" />
    </gazebo>

    <!-- <gazebo reference="${wheel_name}_link" >
      <material>Gazebo/Black</material>
    </gazebo> -->
    
  </xacro:macro>
  </robot>